
@{
    ViewBag.Title = "AddUser";
}

<div class="addUser_back container">
    <div class="content_back"></div>
    <div class="AddUser_inputform">
        <form action="@Url.Action("AddUser")" method="post" id="signin_form">
            <h2>注册新账号</h2>
            <p>我们将发送一封验证邮件至我们将发送一封验证邮件至你的邮箱, 请正确填写以完成账号注册和激活你的邮箱</p>
            <div class="local_signup container" style="width:320px;">
                @Html.AntiForgeryToken()
                <div class="form-group">

                    <input type="text" class="form-control col-md-8" id="name" name="name" autocomplete="off" spellcheck="false" placeholder="请输入昵称">
                </div>
                <div class="form-group">

                    <input type="text" class="form-control col-md-8" id="account" name="account" autocomplete="off" spellcheck="false" placeholder="请输入账号">
                </div>
                <div class="form-group">

                    <input type="text" class="form-control col-md-8" id="Email" name="Email" autocomplete="off" spellcheck="false" placeholder="请输入邮箱">
                </div>
                <div class="form-group">

                    <input type="password" class="form-control col-md-8" id="upwd" name="upwd" autocomplete="off" spellcheck="false" placeholder="请输入密码" >
                </div>
                <div class="form-group">

                    <input type="password" class="conupwd form-control col-md-8" id="conupwd" name="conupwd" autocomplete="off" spellcheck="false" placeholder="请确认密码" class="">
                </div>
                <div class="form-group">

                    <input type="text" class="realname form-control col-md-8" id="realname" name="realname" autocomplete="off" spellcheck="false" placeholder="请输入真实姓名" class="">
                </div>
                <div class="container">
                    <div class="drag">
                        <div class="bg"></div>
                        <div class="text" onselectstart="return false;">请拖动滑块解锁</div>
                        <div class="btn1">&gt;&gt;</div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn2 btn-info btn-lg btn-block">注    册</button>
                </div>
            </div>
        </form>
    </div>
</div>

@Styles.Render("~/Content/Add_user.css")