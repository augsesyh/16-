@model Dongdongdongman.Models.Admin_Index_xiugai
@{
    ViewBag.Title = "Index_xiugai";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-indent"></i>商品下架</h3>
        <ol class="breadcrumb">商品管理<li><i class="fa fa-home"></i>商品修改</li></ol>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2><i class="fa fa-indent red"></i><strong>商品修改</strong></h2>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Good_xiugai","admin")" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="Gid" value="@ViewBag.id">
                    <input type="hidden" name="id" value="@Model.good.Goods_id">
                    <div class="control-group row">
                        <label class="col-md-1 control-label span3"></label>
                        <div class="col-md-5">
                            <img src="@Model.good.Goods_photo" id="img1" style="min-width:100px;min-height:100px;max-width:400px;max-height:800px;">
                        </div>

                    </div>
                    <div class="control-group row">

                        <label for="requirement" class="col-md-1 control-label span3">商品图片上传</label>
                        <div class="col-md-5">
                            <div class="input-group">
                                <input id="photoCover" class="form-control" readonly type="text">
                                <label class="input-group-btn">
                                    <input id="file" type="file" name="file" style="left: -9999px; position: absolute;" value="@Model.good.Goods_photo">
                                    <span class="btn btn-default">Browse</span>
                                </label>
                            </div>
                        </div>

                    </div>
                    <div class="control-group row">
                        <label class="col-md-1 control-label span3"></label>
                        <div class="col-md-5">
                            <img src="@Model.good.Goods_intro" id="img" style="min-width:100px;min-height:100px;max-width:400px;max-height:800px;">
                        </div>

                    </div>
                    <div class="control-group row">

                        <label for="requirement" class="col-md-1 control-label span3">商品详情图片</label>
                        <div class="col-md-5">
                            <div class="input-group">
                                <input id="photoCover1" class="form-control" readonly type="text">
                                <label class="input-group-btn">
                                    <input id="file1" type="file" name="file1" style="left: -9999px; position: absolute;" value="@Model.good.Goods_intro">
                                    <span class="btn btn-default">Browse</span>
                                </label>
                            </div>
                        </div>

                    </div>
                    <div class="control-group row" style="width:50%;margin-top:20px;">
                        <label for="requirement" class="col-sm-2 control-label span3">商品详情文字</label>
                        <div class="col-sm-4">
                            <textarea id="Good_name" type="text" name="Good_name" class="form-control">@Model.good.Good_intro_text</textarea>
                        </div>
                    </div>
                    <div class="control-group row" style="width:50%;margin-top:20px;">
                        <label for="requirement" class="col-sm-2 control-label span3">商品名称</label>
                        <div class="col-sm-4">
                            <input id="Good_name" type="text" name="Good_name" class="form-control" value="@Model.good.Goods_name" />
                        </div>
                    </div>
                    <div class="control-group row" style="width:50%;margin-top:20px;">
                        <label for="requirement" class="col-sm-2 control-label span3">商品价格</label>
                        <div class="col-sm-4">
                            <input id="Good_price" type="text" name="Good_price" class="form-control" value="@Model.good.Goods_price" />
                        </div>
                    </div>
                    <div class="control-group row" style="width:50%;margin-top:20px;">
                        <label for="requirement" class="col-sm-2 control-label span3">商品库存</label>
                        <div class="col-sm-4">
                            <input id="Good_nums" type="text" name="Good_nums" class="form-control" value="@Model.good.Goods_nums"/>
                        </div>
                    </div>
                    <div class="control-group row" style="width:50%;margin-top:20px;">

                        <label for="requirement" class="col-sm-2 control-label span3">商品类别</label>
                        <div class="col-sm-6">
                            <select size="1" value="@Model.good.Goods_Cate1.Goods_Cate_name" id="Good_Cate" name="Good_Cate" class="form-control">
                                @foreach (var it in Model.gc)
                                {
                                    <option value="@it.Cate_id">@it.Goods_Cate_name</option>
                                }
                            </select>

                        </div>
                    </div>

                    <div class="control-group row" style="padding-left:10px;padding-top:10px;">
                        <button class="btn btn-sm btn-success" type="submit"><i class="fa fa-dot-circle-o"></i>修改</button>
                        <button class="btn btn-sm btn-danger" type="reset"><i class="fa fa-ban"></i>重置</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

